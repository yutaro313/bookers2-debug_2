 <% book.comments.each do |comment| %>
  <tr>
  <td>
    <%= link_to user_path(book.user) do %>
      <p><%= image_tag('no-image-icon.jpg') %></p>
      <%= comment.user.name %>
    <% end %>
  </td>
  <td><%= comment.comment %></td>
    <% if comment.user == current_user %>
  <td><%= link_to 'Destroy', book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger"%></td>
    <% end %>
  </tr>
  <% end %>